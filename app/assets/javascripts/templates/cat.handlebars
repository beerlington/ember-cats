<div class='span6'>
  <h1>{{ breed }}</h1>

  <p>
    <img {{ bindAttr src="imageUrl"}}>
  </p>

  <p>
    {{#if isEditing}}
      {{ view Ember.TextField valueBinding='breed' }}
    {{/if}}
  </p>

  <button class='btn btn-small' {{ action toggleEdit }}>
    {{#if isEditing}}
      Done
    {{else}}
      Edit {{ name }}
    {{/if}}
  </button>
</div>
